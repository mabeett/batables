<!DOCTYPE html>
<html>
<head>
  <title>Batables</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to "Batables", root_url, class: "brand" %>
        <% if current_user %>
          <ul class="nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Admin
              <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Users', users_path %></li>
              </ul>
            </li>
          </ul>
        <% end %>
        <p class="navbar-text pull-right">
          <% if current_user %>
            Logged in as <%= link_to current_user.email, current_user %>. 
            <%= link_to "Log out", log_out_path, data: { method: :delete } %>
          <% else %>
            <%= link_to "Log in", log_in_path %>
          <% end %>
        </p>
      </div>
    </div>
  </header>
  <div class="container">
    <% if flash_message %>
      <div class="alert <%= flash_class %> alert-dismissable fade in">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong><%= flash_message %></strong>
      </div>
    <% end %>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
  </div>
</body>
</html>
