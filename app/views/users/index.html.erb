<h1>User List</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, user_path(user) %></td>
        <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_user_path(user) %></td>
        <td><%= link_to '<i class="icon-trash"></i>'.html_safe, user, method: :delete, data: { confirm: 'Ayer you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'Create user', new_user_path, class: 'btn btn-default' %>
