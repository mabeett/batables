<h1>User List</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
      <tr>
        <th><%= user.first_name %></th>
        <th><%= user.last_name %></th>
        <th><%= user.email %></th>
        <th><%= link_to 'Show', user_path(user) %></th>
        <th><%= link_to 'Edit', edit_user_path(user) %></th>
        <th><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Ayer you sure?' } %></th>
      </tr>
    <% end %>
  </tbody>
</table>

