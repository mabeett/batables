<%= simple_form_for @user do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <div class="form-inputs">
      <%= f.input :first_name, input_html: { autofocus: true } %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: 'btn-default' %>
    </div>
  </fieldset>
<% end %>
